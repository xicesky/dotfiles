    email = 663399+xicesky@users.noreply.github.com
[core]
    editor = vim
    autocrlf = false
    symlinks = true
[init]
    defaultBranch = main
[push]
    default = simple
[pull]
    ff = only
[color]
    ui = auto
[diff]
    tool = vimdiff
    guitool = meld
[merge]
    tool = vimdiff
    guitool = meld
[difftool]
    prompt = false
[mergetool]
    keepBackup = false
[difftool "winmerge"]
    trustExitCode = true
[mergetool "winmerge"]
    trustExitCode = true
[alias]
    st = status
    d = difftool -g -d
    root = rev-parse --show-toplevel
    current-branch = rev-parse --abbrev-ref HEAD
    cur = current-branch
    restor = restore
    mini = log --format=oneline
    mu = multi-st -c 90
    c-p = cherry-pick
